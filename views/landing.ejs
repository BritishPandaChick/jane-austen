<%- include("partials/header") %>

<div class="container-fluid">
  <section id="banner">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <h2 class="text-center">Jane Austen</h2>
    </div>
  </section>

  <section id="signup">
    <div class="container">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <h2 class="text-center">Want to get weekly advice from Jane?</h2>
        <h3 class="text-center">Register for Jane's Advice Column here.</h3>
        
        <form>
          <div class="form-group">
            <div class="row">
              <div class="col-sm-12 col-md-9 col-lg-9">
                <input type="text" class="form-control" name="email" placeholder="Sign Up here!">
              </div>
              
              <div class="col-sm-12 col-md-3 col-lg-3">
                <input type="button" value="Submit" class="btn form-control">
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>

  <section id="new">
    <h2>What's New</h2>
    <div class="row text-center">
      <div class="col-sm-12 col-md-4 col-lg-4">
        <img src="https://m.media-amazon.com/images/M/MV5BOTJmZWIyYTctNGZiYi00ZWQzLThhYzYtMWRkZWU5NzA1ZDEyXkEyXkFqcGdeQXVyMTkxNjUyNQ@@._V1_SY1000_CR0,0,1436,1000_AL_.jpg" class="img-thumbnail" alt="Emma 2020 Movie Poster" />
